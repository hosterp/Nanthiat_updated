							<tree string="Included Services" editable="bottom">
								<field name="particular" string="Particular" />
								<field name="qty" string="Qty" />
								<field name="rate" string="Rate" />
								<field name="amount" sum="Price" string="Indicative Cost" />
							</tree>
						</field>
					</group>
				</xpath>

			</field>
		</record>


